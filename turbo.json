{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist",
        ".wundergraph/generated/**"
      ],
      "env": [
        "WG_PUBLIC_NODE_URL",
        "ARBITRUM_SUBGRAPH_API_KEY",
        "UPSTASH_REDIS_URL"
      ]
    },
    "lint": {},
    "test": {
      "dependsOn": [
        "^test"
      ],
      "env": [
        "ARBITRUM_SUBGRAPH_API_KEY",
        "UPSTASH_REDIS_URL"
      ]
    },
    "test:ci": {
      "dependsOn": [
        "^test:ci"
      ],
      "env": [
        "ARBITRUM_SUBGRAPH_API_KEY",
        "UPSTASH_REDIS_URL"
      ]
    },
    "build:release": {
      "dependsOn": [
        "^build:release"
      ],
      "cache": false,
      "dotEnv": [
        ".env.prod"
      ]
    },
    "publish-package": {
      "dependsOn": [
        "build:release"
      ],
      "env": [
        "ARBITRUM_SUBGRAPH_API_KEY",
        "UPSTASH_REDIS_URL",
        "YARN_OTP"
      ],
      "cache": false,
      "dotEnv": [
        ".env.prod"
      ]
    }
  }
}